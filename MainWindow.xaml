<Window x:Class="CustomHeaderColourDataGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CustomHeaderColourDataGrid"

        Title="MainWindow" Height="350" Width="525">

    <Window.Resources>
        <ResourceDictionary>
       
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/SplitButtonColumnHeaderStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel>
        <local:ColourListBox DockPanel.Dock="Left">
            
        </local:ColourListBox>
        <DataGrid x:Name="dataGrid" RowBackground="Transparent"  CanUserSortColumns="False" ColumnWidth="*" ColumnHeaderStyle="{StaticResource SplitButtonColumnHeaderStyle}">
        </DataGrid >

    </DockPanel>
</Window>
