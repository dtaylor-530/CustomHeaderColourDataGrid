<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FancyGridEx">
    
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FancyGridEx;component/Themes/ColumnHeader.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    
    <Style TargetType="{x:Type local:FilteringDataGridEx}" BasedOn="{StaticResource {x:Type DataGrid}}">
        <Setter Property="ColumnHeaderStyle" Value="{StaticResource DataGridColumnHeaderStyle}"/>
    </Style>
    
    
</ResourceDictionary>